<%- include ../partials/header %>
<%- include ../partials/menu %>
<div class="header" style="background-color:#343a40;align-items:center">
	<div class="row">
        <div class="col-sm-6" style="margin-left:20%">
          <input type="text" class="form-control" name="search" id="search">
        </div>
		<div class="col-sm-2">
			<button type="button" class="btn btn-primary" style="background-color:rgb(66, 66, 247); border-color:darkblue;color:white;" onclick="makeAPICall()">Search</button>
		</div>
	</div>
	<br>
</div>
